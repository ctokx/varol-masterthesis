{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 3,
  "name": "Gemini™ for Chrome",
  "short_name": "Gemini AI",
  "version": "1.0.6",
  "description": "Gemini™ for Chrome is an AI companion that enables quick access to Gemini™ Chatbot- anywhere & anytime!",
  "icons": {
    "32": "images/32.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "unlimitedStorage",
    "storage",
    "background",
    "contextMenus",
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
      "id": "ruleset_1",
      "enabled": true,
      "path": "rule.json"
      },
      {
        "id": "ruleset_2",
        "enabled": true,
        "path": "rule2.json"
      },
      {
        "id": "ruleset_3",
        "enabled": true,
        "path": "rule3.json"
      }
    ]
  },
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["gemini.js"],
      "run_at": "document_start",
      "all_frames": true
    }
    , 
    {
      "matches": ["*://gemini.google.com/*", "*://srch.ing/*"],
      "js": ["js/a_fun.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
    ,    
    {
      "matches": ["*://*/*"],
      "js": ["js/all.js"],
      "css": ["styles/all.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": 
  [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"],
      "all_frames": true,
      "extension_ids": ["*"]
    }
  ],
  "commands": 
  {
    "open_promptbar": 
    {
      "suggested_key": 
      {
        "default": "Alt+A",
        "windows": "Alt+A",
        "mac": "Alt+A",
        "chromeos": "Alt+A",
        "linux": "Alt+A"
      },
      "description": "Press Alt + A to open the AI prompt-bar"
    },
    "open_searchbar": 
    {
      "suggested_key": 
      {
        "default": "Alt+S",
        "windows": "Alt+S",
        "mac": "Alt+S",
        "chromeos": "Alt+S",
        "linux": "Alt+S"
      },
      "description": "Press Alt + S to open the search-bar"
    },
    "_execute_action": 
    {
      "suggested_key": 
      {
        "default": "Alt+G",
        "windows": "Alt+G",
        "mac": "Alt+G",
        "chromeos": "Alt+G",
        "linux": "Alt+G"
      },
      "description": "Press Alt + G to open Gemini™"
    }
  },
  "offline_enabled": true,
  "author": "Gemini™",
  "background": {
    "service_worker": "js/service.js"
  },
  "content_security_policy": {
    "extension_pages": "font-src 'self'; script-src 'self'; object-src 'self'; worker-src 'self'",
    "content_scripts": "font-src 'self'; script-src 'self'; object-src 'self'; worker-src 'self'"
  },
  "minimum_chrome_version": "114", 
  "action": {
    "default_icon": {
      "32": "images/32.png",
      "48": "images/48.png",
      "64": "images/64.png",
      "128": "images/128.png"
    },
    "default_title": "Gemini™ [Alt + G]"
  }
}