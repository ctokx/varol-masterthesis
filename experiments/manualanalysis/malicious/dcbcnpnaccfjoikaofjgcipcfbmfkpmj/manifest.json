{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "H-Chat Assistant",
  "description": "Use H-Chat Assistant quickly and powerfully in Google Chrome.",
  "version": "1.1.8",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/assets/icons/logo48.png",
    "32": "/assets/icons/logo48.png",
    "48": "/assets/icons/logo48.png",
    "128": "/assets/icons/logo48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/content.js"]
    }
  ],
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "unlimitedStorage",
    "sidePanel",
    "identity"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "options_page": "options.html",
  "side_panel": {
    "default_path": "popup.html"
  },
  "oauth2": {
    "client_id": "380646965031-b88520qt0tppevbp9g5gdeg5q9uor23n.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/drive"
    ]
  }
}
